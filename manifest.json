{
    "name": "Sticky Send",
    "description": "A Chrome extension to send stickers and silly surprises to your friends while browsing the web.",
    "version": "1.0",
    "manifest_version": 3,
    "icons": {
        "16": "assets/star_mascot.png",
        "48": "assets/star_mascot.png",
        "128": "assets/star_mascot.png"
    },
    "action": {
        "default_popup": "src/hello.html",
        "default_icon": "assets/star_mascot.png"
    },
    "background": {
        "service_worker": "src/background.js"
    },
    "permissions": [
        "identity",
        "tabs",
        "activeTab",
        "scripting",
        "storage",
        "alarms"
    ],
    "host_permissions": [
        "https://xrvicqszlafncvfmqydp.supabase.co/*",
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["src/content.js"],
            "css": ["src/style.css"],
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["assets/hit.wav", "assets/scary.mp3", "assets/background.jpg", "assets/exit-icon.png", "assets/stickysend-addtitle.png", "assets/upload-icon.png"],
            "matches": ["<all_urls>"]
        }
    ]
  }